<div class="container">
  <hr />
  <div class="col-sm-2">
    <%= link_to 'Novo', new_immobile_path, class: 'btn btn-second' %>
    <br />
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Value</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @immobiles.each do |immobile| %>
      <tr>
        <td><%= immobile.title %></td>
        <td><%= immobile.description %></td>
        <td><%= immobile.value %></td>
        <td><%= link_to 'Show', immobile %></td>
        <td><%= link_to 'Edit', edit_immobile_path(immobile) %></td>
        <td><%= link_to 'Destroy', immobile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>